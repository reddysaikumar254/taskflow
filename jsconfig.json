{
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["client/src/*"],
      "@shared/*": ["shared/*"],
      "@components/*": ["client/src/components/*"],
      "@lib/*": ["client/src/lib/*"],
      "@hooks/*": ["client/src/hooks/*"],
      "@ui/*": ["client/src/components/ui/*"]
    }
  },
  "include": ["client/src/**/*", "shared/**/*", "server/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
